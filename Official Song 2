#Song2 BADHABIT
use_bpm 84
use_synth:piano

djbacky= "C:/Users/okikioluwa ogunnaike/Downloads/djbackky.wav"

s = 0.25
a = 0
f = 0.25

live_loop :three do
  4.times do
    sample djbacky, start: s, finish: f, amp: a
    s = 0.25
    a = a + 0.25
    f = f + 0.25
    sleep 2.538/4
  end
  stop
end

