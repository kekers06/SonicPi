#define function

define :fortnite do
  sleep 0.5
  play :ef5
  sleep 0.25
  play :c5
  sleep 0.25
  play :f5
  sleep 1
  play :c5
  sleep 0.25
  play :df5
  sleep 0.25
  play :ef5
  sleep 0.25
  play :c5
  sleep 0.25
  play :f5
  sleep 0.5
  play :ef5
  sleep 0.5
  play :ef5
  sleep 0.5
end


#first line of sheet music.

notes = [:r, :af5, :c6, :df6, :ef6, :df6, :g4, :g4, :af4, :ef3, :c4, :df4, :ef4, :af4, :c4, :df4, :df4, :ef4, :df4, :g3, :af4]
sleepTimes = [1.8, 0.5, 0.5, 0.5, 0.5, 0.5, 0.5, 0.25, 0.75, 0.5, 0.5, 0.5, 2.5, 0.5, 0.5, 0.5, 0.5, 0.5, 0.5, 0.5, 0.25]
index = 0

live_loop :arrayfirstline do
  21.times do
    play notes[index]
    sleep sleepTimes[index]
    index = index + 1
    stop
  end
  index = 0
end

